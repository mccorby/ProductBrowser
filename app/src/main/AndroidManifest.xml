<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mccorby.productbrowser" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.view.activities.ProductListActivity"
            android:label="@string/title_activity_product_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.view.activities.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"
            android:parentActivityName=".app.view.activities.ProductListActivity">
        </activity>
    </application>

</manifest>
